
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <%= simple_form_for(@word) do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :word, label: "Search Word", input_html: { class: "textfield" }, required: true, wrapper: false, label_html: { class: "label" }, placeholder: "Enter Word"%>
        </div>
      </div>
      <%= f.button :submit, class: "btn btn-success", value: "Search" %>
    <% end %>
  </div>
</div>